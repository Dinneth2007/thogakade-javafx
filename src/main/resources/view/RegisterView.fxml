<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Auth.RegisterViewController">
   <children>
      <Label alignment="CENTER" layoutX="258.0" layoutY="-1.0" prefHeight="48.0" prefWidth="330.0" text="Register">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <TextField fx:id="txtUname" layoutX="343.0" layoutY="108.0" promptText="username" />
      <TextField fx:id="txtemail" layoutX="343.0" layoutY="157.0" promptText="email" />
      <TextField fx:id="txtpwd" layoutX="343.0" layoutY="203.0" promptText="password" />
      <TextField fx:id="txtrepwd" layoutX="343.0" layoutY="245.0" promptText="re-enter password" />
      <Button fx:id="redBtn" layoutX="426.0" layoutY="335.0" mnemonicParsing="false" onAction="#register" style="-fx-background-color: green;" text="Register" textFill="#f8f8f8" />
      <Button fx:id="loginnavBtn" layoutX="503.0" layoutY="335.0" mnemonicParsing="false" onAction="#navigatetologin" prefHeight="26.0" prefWidth="62.0" style="-fx-background-color: grey;" text="Login" textFill="#f8f8f8" />
      <ImageView fitHeight="407.0" fitWidth="311.0" layoutX="-4.0" layoutY="-1.0" pickOnBounds="true">
         <image>
            <Image url="@../images/posimg.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
